<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <servlet-class>everything.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product</servlet-name>
        <servlet-class>everything.Product</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnectionTest</servlet-name>
        <servlet-class>everything.ConnectionTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCart</servlet-name>
        <servlet-class>everything.ShoppingCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrderInfo</servlet-name>
        <servlet-class>everything.AddOrderInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveView</servlet-name>
        <servlet-class>everything.RemoveView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/MainPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/Product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConnectionTest</servlet-name>
        <url-pattern>/ConnectionTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCart</servlet-name>
        <url-pattern>/ShoppingCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOrderInfo</servlet-name>
        <url-pattern>/AddOrderInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveView</servlet-name>
        <url-pattern>/RemoveView</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
